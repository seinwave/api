<%= turbo_stream.replace "info_panel" do %>
  <% if @cultivars.count == 0 %>
    <%= render partial: "info_panel/empty" %>
  <% elsif @cultivars.count == 1 %>
    <% @current_cultivar = @cultivars.first %>
    <%= render partial: "map/info_panel_container", locals: { current_cultivar: @current_cultivar } %>
  <% else %> 
    <%= render partial: "info_panel/search_results", locals: { cultivars: @cultivars } %>    
  <% end %> 
<% end %>

